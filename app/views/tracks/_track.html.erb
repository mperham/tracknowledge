<div class="track_entry">
	<h2><%= link_to track.name, track_path(track) %></h2>
	<table>
		<% %w(address owner country).each do |prop| 
			val = track.send(prop.to_sym)
			next unless val %>
		 <tr><th><%= prop.titleize %></th><td><%= val %></td></tr>
		<% end %>
		<% if track.website %>
			<tr><th>Website</th><td><a href="<%= track.website %>"><%= track.website %></a></td></tr>
		<% end %>
		<% if track.categories.size > 0 %>
			<tr><th>Used For</th><td><%= track.categories.map(&:name).join(", ") %></td></tr>
		<% end %>
	</table>
</div>